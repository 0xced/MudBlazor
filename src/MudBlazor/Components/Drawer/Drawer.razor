@namespace MudBlazor
@using MudBlazor.Utilities
@using MudBlazor.Extensions

<aside class="@Classname">
    @ChildContent
</aside>

@code {

    protected string Classname =>
    new CssBuilder("mud-drawer")
      .AddClass($"mud-drawer-anchor-{Anchor.ToDescriptionString()}")
      .AddClass($"mud-drawer--open", DrawerOpen)
      .AddClass($"mud-drawer--closed", !DrawerOpen)
      .AddClass($"mud-paper-elevation{Elevation.ToString()}")
      .AddClass(Class)
    .Build();

    [Parameter] public int Elevation { set; get; } = 1;

    [Parameter] public Anchor Anchor { get; set; }

    [Parameter] public string Class { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }

    [CascadingParameter] bool DrawerOpen { get; set; }

}