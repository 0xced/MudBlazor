@namespace MudBlazor


<MudToolBar Class="mud-table-pagination-toolbar">
    <div class="mud-table-pagination-spacer"></div>
    @if (!DisableRowsPerPage)
    {
        <Typography Typo="Typo.body2" Class="mud-table-pagination-caption" GutterBottom="false">
            @RowsPerPageString
        </Typography>
        <MudSelect SelectedValue="SetRowsPerPage" Value="@Table.RowsPerPage.ToString()" Class="mud-table-pagination-select" DisabelUnderLine="true">
            @foreach (int pageSize in PageSizeOptions)
            {
                <MudSelectItem Value="@pageSize.ToString()">@pageSize.ToString().ToUpper()</MudSelectItem>
            }
        </MudSelect>
    }
    <Typography Typo="Typo.body2" Class="mud-table-pagination-caption" GutterBottom="false">
        @Info
    </Typography>
    <div class="mud-table-pagination-actions">
        <MudIconButton Icon="@Icons.Material.FirstPage" @onclick="@(() => Table.NavigateTo(Page.First))" />
        <MudIconButton Icon="@Icons.Material.NavigateBefore" @onclick="@(() => Table.NavigateTo(Page.Previous))" />
        <MudIconButton Icon="@Icons.Material.NavigateNext" @onclick="@(() => Table.NavigateTo(Page.Next))" />
        <MudIconButton Icon="@Icons.Material.LastPage" @onclick="@(() => Table.NavigateTo(Page.Last))" />
    </div>
</MudToolBar>

