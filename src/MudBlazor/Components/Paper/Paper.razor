@namespace MudBlazor
@using MudBlazor.Utilities

<div class="@Classname">
    @ChildContent
</div>

@code {

    protected string Classname =>
    new CssBuilder("mud-paper-root")
      .AddClass($"mud-paper-elevation{Elevation.ToString()}")
      .AddClass($"mud-paper-outlined", Outlined)
      .AddClass($"mud-paper-rounded", !Square)
      .AddClass(Class)
    .Build();

    [Parameter] public int Elevation { set; get; } = 1;

    [Parameter] public bool Square { get; set; } = false;

    [Parameter] public bool Outlined { get; set; } = false;

    [Parameter] public string Class { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }
}