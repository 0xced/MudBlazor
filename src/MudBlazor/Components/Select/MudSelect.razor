@namespace MudBlazor
@inherits MudBaseInputText

<MudInputControl HelperText="@HelperText" FullWidth="@FullWidth" Margin="@Margin" Class="@Classname">
        <MudInput InputType="InputType.Text" Variant="@Variant" Value="@Value" DisableUnderLine="@DisableUnderLine" Placeholder="@Placeholder" Disabled=@Disabled ReadOnly="@ReadOnly"
                  @onclick="@ToggleMenu" Class="mud-select-input" Error="@Error" AdornmentIcon="@CurrentIcon" Adornment="Adornment.End" IconSize="Size.Medium" />
        <MudInputLabel Class="mud-input-label-inputcontrol" Variant="@Variant">
            @Label
        </MudInputLabel>
        <CascadingValue Value="@this">
            <div class="mud-select-menu @(isMenuOpen? "mud-open" : "")">
                <MudList Clickable="true">
                    @ChildContent
                </MudList>
            </div>
        </CascadingValue>
</MudInputControl>


@if (isMenuOpen)
{
    <div class="mud-select-overlay" @onclick="@ToggleMenu"></div>
}
