@namespace MudBlazor
@inherits MudComponentBase;

<div @ref="_root" @attributes="UserAttributes" class="@Class" style="@("outline-style: none;" + Style)" @onkeydown="OnRootKeyDown" @onkeyup="OnRootKeyUp" @onfocus="OnRootFocus" tabindex="-1">

    <div @ref="_firstBumper"
         style="pointer-events:none; position:fixed;"
         tabindex="@BumperTabIndex"
         @onfocus="OnBumperFocus">
    </div>

    <div @ref="_fallback"
         style="pointer-events:none; position:fixed;"
         tabindex="-1">
    </div>

    @ChildContent

    <div @ref="_lastBumper"
         style="pointer-events:none; position:fixed;"
         tabindex="@BumperTabIndex"
         @onfocus="OnBumperFocus">
    </div>

</div>

@code {
    string BumperTabIndex => (Disabled? "-1" : "0");
}