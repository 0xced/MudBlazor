@namespace MudBlazor
@inherits MudBaseInputText





<div @attributes="UserAttributes" class="@Classname" style="@Style">
    @ControlInput
    @if (!String.IsNullOrEmpty(Label))
    {
        <MudInputLabel Class="mud-input-label-inputcontrol" Variant="@Variant" Disabled=@Disabled Error="@Error">
            @Label
        </MudInputLabel>
    }
    @if (!String.IsNullOrEmpty(HelperText))
    {
        <p class="@HelperClass">
            @if (Error)
            {
                @ErrorText
            }
            else
            {
                @HelperText
            }
        </p>
    }
    else if (String.IsNullOrEmpty(HelperText) && Error)
    {
        <p class="@HelperClass">@ErrorText</p>
    }
    @ControlChild
</div>

