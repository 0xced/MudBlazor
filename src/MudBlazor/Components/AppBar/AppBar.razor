@namespace MudBlazor
@using MudBlazor.Utilities
@using MudBlazor.Extensions

<header class="@Classname">
    <ToolBar>
        @ChildContent
    </ToolBar>
</header>

@code {

    protected string Classname =>
    new CssBuilder("mud-appbar")
      .AddClass($"mud-appbar-position-{Position.ToDescriptionString()}")
      .AddClass($"mud-appbar-drawer-open", DrawerOpen)
      .AddClass($"mud-paper-elevation{Elevation.ToString()}")
      .AddClass(Class)
    .Build();

    [Parameter] public int Elevation { set; get; } = 4;

    [Parameter] public Position Position { get; set; } = Position.Fixed;

    [Parameter] public string Class { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }

    [CascadingParameter] bool DrawerOpen { get; set; }

}