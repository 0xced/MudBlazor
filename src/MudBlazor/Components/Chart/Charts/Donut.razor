@namespace MudBlazor.Charts
@using System.Globalization
@inherits DonutBase


<svg class="mud-chart-donut" width="@MudChartParent.Width" height="@MudChartParent.Height" viewBox="0 0 40 40">
    <circle class="mud-donut-ring" cx="25" cy="25" r="15"></circle>
    @foreach (var item in Circles.ToList())
    {
        <circle class="@($"mud-donut-segment mud-chart-stroke-color-{item.Index.ToString()}")" cx="@item.CX.ToString(CultureInfo.InvariantCulture)" cy="@item.CY.ToString(CultureInfo.InvariantCulture)" r="@item.Radius.ToString(CultureInfo.InvariantCulture)" stroke-dasharray="@item.StrokeDashArray" stroke-dashoffset="@item.StrokeDashOffset.ToString(CultureInfo.InvariantCulture)"></circle>
    }
    <circle class="mud-donut-hole" cx="20" cy="20" r="15"></circle>
</svg>
<div class="mud-chart-legend">
    @foreach (var item in Legends.ToList())
    {
        <div class="mud-chart-legend-item">
            <span class="@($"mud-chart-legend-marker mud-chart-marker-color-{item.Index.ToString()}")"></span>
            <MudText Typo="Typo.body2" Inline="true">@item.Labels @(MudChartParent.DisplayLegendItemValues? $"({item.Data}%)": "")</MudText>
        </div>
    }
</div>


