@namespace MudBlazor
@using MudBlazor.Charts
@inherits MudChartBase

<CascadingValue Value="@this">
    @if (ChartType == ChartType.Donut)
    {
        <Donut InputData="@InputData" InputLabels="@InputLabels"></Donut>
    }
    @if (ChartType == ChartType.Pie)
    {
        <Pie InputData="@InputData" InputLabels="@InputLabels"></Pie>
    }
</CascadingValue>