@namespace MudBlazor
@inherits MudBaseInputText


<MudFormControl HelperText="@HelperText" FullWidth="@FullWidth">
    <MudInput @attributes="UserAttributes" InputType="@InputType" Class="@Classname" Style="@Style"
              Variant="@Variant" @bind-Value="@Value" Placeholder="@Placeholder" Disabled=@Disabled ReadOnly="@ReadOnly"
              Adornment="@Adornment" AdornmentText="@AdornmentText" AdornmentIcon="@AdornmentIcon" OnAdornmentClick="@OnAdornmentClick" />
    <MudInputLabel Class="mud-input-label-formcontrol" Variant="@Variant" Disabled=@Disabled>
        @Label
    </MudInputLabel>
</MudFormControl>

