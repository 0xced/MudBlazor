@inherits LayoutComponentBase

<Layout DrawerOpen="@_drawerOpen">
    <AppBar>
        <IconButton Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"></IconButton>
    </AppBar>
    <Drawer>
        <DrawerHeader>
            MudBlazor
        </DrawerHeader>
        <Divider />
        <NavMenu />
    </Drawer>
    <MainContent>
        @Body
    </MainContent>
</Layout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}