@namespace MudBlazor.Docs.Examples

<div>
    <MudChart ChartType="ChartType.Donut" Width="300px" Height="300px"
              InputData="@data" InputLabels="@labels">
    </MudChart>
    <MudButton Variant="Variant.Filled" Color="Color.Primary">Add</MudButton>
    <MudButton @onclick="RandomizeData" Variant="Variant.Filled">Randomize</MudButton>
    <MudButton Variant="Variant.Filled" Color="Color.Secondary">Remove</MudButton>
</div>

@code {
    public double[] data = { 50, 25, 20, 5 };
    public string[] labels = { "Fossile", "Nuclear", "Solar", "Wind" };

    Random random = new Random();
    public void RandomizeData()
    {
        var new_data = new double[data.Length];
        for (int i = 0; i < new_data.Length; i++)
            new_data[i] = random.NextDouble() * 100;
        data = new_data;
        StateHasChanged();
    }
}