@namespace MudBlazor.Docs.Examples
 
<MudGrid>
    <MudItem xs="3">
        <MudRadioGroup @bind-SelectedOption="@Placement" Class="d-flex flex-column">
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.LeftStart">Left-Start</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.Left">Left</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.LeftEnd">Left-End</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.RightStart">Right-Start</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.Right">Right</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.RightEnd">Right-End</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.Center">Center</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.TopStart">Top-Start</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.Top">Top</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.TopEnd">Top-End</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.BottomStart">Bottom-Start</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.Bottom">Bottom</MudRadio>
            <MudRadio Color="Color.Primary" Dense="true" Option="Placement.BottomEnd">Bottom-End</MudRadio>
        </MudRadioGroup>

    </MudItem>
    <MudItem xs="9" Class="d-flex justify-center align-center">
        <MudBadge Color="Color.Primary" Dot="true">
            <MudPaper Elevation="0" Outlined="true" Class="pa-12">
                <MudPopover Open="true" Placement="@Placement" Class="pa-4">
                    <MudText>The content of the Popover.</MudText>
                </MudPopover>
            </MudPaper>
        </MudBadge>
    </MudItem>
</MudGrid>






        

@code{
    public Placement Placement { get; set; } = Placement.Left;
}