@page "/components/inputs/iconbutton"


<DocsPage>
    <Container>
        <Typography Typo="Typo.h3">Icon Button</Typography>
        <Typography Typo="Typo.h4">Simple Icon Buttons</Typography>
        <DocsShowcase Outlined="true">
            <IconButton Icon="@Icons.Material_Delete"></IconButton>
            <IconButton Icon="@Icons.Brand_GitHub" Color="Color.Primary"></IconButton>
            <IconButton Icon="@Icons.Material_Favorite" Color="Color.Secondary"></IconButton>
            <IconButton Icon="@Icons.Material_Share" Disabled="true"></IconButton>
        </DocsShowcase>
        <MarkdownSegment Text="@Markdown_Simple" />
    </Container>
    <Container>
        <Typography Typo="Typo.h4">Toggle Icon Button</Typography>
        <DocsShowcase Outlined="true">
            <IconButton Icon="@Icons.Material_Delete"></IconButton>
            <IconButton Icon="@Icons.Brand_GitHub" Color="Color.Primary"></IconButton>
            <IconButton Icon="@Icons.Material_Favorite" Color="Color.Secondary"></IconButton>
            <IconButton Icon="@Icons.Material_Share" Disabled="true"></IconButton>
        </DocsShowcase>
        <MarkdownSegment Text="@Markdown_Toggle" />
    </Container>
</DocsPage>


