@page "/components/inputs/checkbox"


<DocsPage>
    <Container>
        <Typography Typo="Typo.h3">Checkbox</Typography>
        <Typography Typo="Typo.h4">Basic checkboxes</Typography>
        <DocsShowcase Outlined="true">
            <CheckBox Checked="@Basic_CheckBox1"></CheckBox>
            <CheckBox Checked="@Basic_CheckBox2" Color="Color.Primary"></CheckBox>
            <CheckBox Checked="@Basic_CheckBox1" Color="Color.Secondary"></CheckBox>
        </DocsShowcase>
        <MarkdownSegment Text="@Markdown_Basic" />
    </Container>
    <Container>
        <Typography Typo="Typo.h4">Checkbox with label</Typography>
        <DocsShowcase Outlined="true">
            <CheckBox Checked="@Basic_CheckBox1" Label="Default"></CheckBox>
            <CheckBox Checked="@Basic_CheckBox2" Label="Primary" Color="Color.Primary"></CheckBox>
            <CheckBox Checked="@Basic_CheckBox3" Label="Secondary" Color="Color.Secondary"></CheckBox>
        </DocsShowcase>
        <MarkdownSegment Text="@Markdown_Label" />
    </Container>
</DocsPage>


@code {
    public bool Basic_CheckBox1 { get; set; } = true;
    public bool Basic_CheckBox2 { get; set; } = false;
    public bool Basic_CheckBox3 { get; set; } = false;

string Markdown_Basic = @"```html
<CheckBox Checked=""@Basic_CheckBox1""></CheckBox>
<CheckBox Checked=""@Basic_CheckBox2"" Color=""Color.Primary""></CheckBox>
<CheckBox Checked=""@Basic_CheckBox1"" Color=""Color.Secondary""></CheckBox>
```";

string Markdown_Label = @"```html
<CheckBox Checked=""@Basic_CheckBox1"" Label=""Default""></CheckBox>
<CheckBox Checked=""@Basic_CheckBox2"" Label=""Primary"" Color=""Color.Primary""></CheckBox>
<CheckBox Checked=""@Basic_CheckBox3"" Label=""Secondary"" Color=""Color.Secondary""></CheckBox>
```";
}
