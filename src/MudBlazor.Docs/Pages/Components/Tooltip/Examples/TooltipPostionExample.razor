@*@namespace MudBlazor.Docs.Examples

<MudGrid Spacing="0">
    <MudItem xs="12" Class="d-flex justify-center">
        <MudTooltip Text="Top Start" Placement="Placement.TopStart">
            <MudButton Color="Color.Primary">Top-Start</MudButton>
        </MudTooltip>
        <MudTooltip Text="Top" Placement="Placement.Top">
            <MudButton Color="Color.Primary">Top</MudButton>
        </MudTooltip>
        <MudTooltip Text="Top End" Placement="Placement.TopEnd">
            <MudButton Color="Color.Primary">Top-End</MudButton>
        </MudTooltip>
    </MudItem>
    <MudItem xs="12">
        <MudGrid Spacing="0">
            <MudItem xs="6" Class="d-flex flex-column align-start">
                <MudTooltip Text="Left" Placement="Placement.Left" >
                    <MudButton Color="Color.Primary">Left</MudButton>
                </MudTooltip>
                <MudTooltip Text="Left Start" Placement="Placement.LeftStart">
                    <MudButton Color="Color.Primary">Left-Start</MudButton>
                </MudTooltip>
                <MudTooltip Text="Left End" Placement="Placement.LeftEnd">
                    <MudButton Color="Color.Primary">Left-End</MudButton>
                </MudTooltip>
            </MudItem>
            <MudItem xs="6" Class="d-flex flex-column align-end">
                <MudTooltip Text="Right Start" Placement="Placement.RightStart">
                    <MudButton Color="Color.Primary">Right-Start</MudButton>
                </MudTooltip>
                <MudTooltip Text="Right" Placement="Placement.Right">
                    <MudButton Color="Color.Primary">Right</MudButton>
                </MudTooltip>
                <MudTooltip Text="Right End" Placement="Placement.RightEnd">
                    <MudButton Color="Color.Primary">Left-End</MudButton>
                </MudTooltip>
            </MudItem>
        </MudGrid>
    </MudItem>
    <MudItem xs="12" Class="d-flex justify-center">
        <MudTooltip Text="Bottom Start" Placement="Placement.BottomStart">
            <MudButton Color="Color.Primary">Bottom-Start</MudButton>
        </MudTooltip>
        <MudTooltip Text="Bottom" Placement="Placement.Bottom">
            <MudButton Color="Color.Primary">Bottom</MudButton>
        </MudTooltip>
        <MudTooltip Text="Bottom End" Placement="Placement.BottomEnd">
            <MudButton Color="Color.Primary">Bottom-End</MudButton>
        </MudTooltip>
    </MudItem>
