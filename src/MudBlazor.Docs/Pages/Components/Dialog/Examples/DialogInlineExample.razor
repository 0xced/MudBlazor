@namespace MudBlazor.Docs.Examples

<MudText>count is @_count</MudText>
<MudButton OnClick="@((e) => {isOpen=true;})">Open</MudButton>

<MudDialog @bind-IsVisible="@isOpen">

    <DialogContent>
        <MudButton OnClick=@AddOne>Click me</MudButton>
        <MudText>count is @_count</MudText>
    </DialogContent>
</MudDialog>
@code {
    int _count = 0;
    bool isOpen = false;

    public void AddOne()
    {
        _count++;
        StateHasChanged();
    }
}
