@page "/getting-started/usage"

<DocsPage>
    <MudContainer>
        <MudTypography Typo="Typo.h3">Usage</MudTypography>
        <MudTypography>After your installation is done, you can find some examples here.</MudTypography>
        <MudTypography Typo="Typo.h4">Quick Start</MudTypography>
        <MudTypography>This is literally all you need in your views to use MudBlazor components.</MudTypography>
        <MarkdownSegment Text="@Markdown_QuickStart" />
        <SectionContent Outlined="true" DisplayFlex="true">
            <MudTypography Typo="Typo.h6">MudBlazor is @Text</MudTypography>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ButtonOnClick">@ButtonText</MudButton>
        </SectionContent>
    </MudContainer>
    <MudContainer>
        <div style="padding-top:64px;">
            <MudTypography Typo="Typo.h6" Align="Align.Center">Check out all the components in the menu to find out whats available and how to use them.</MudTypography>
        </div>
    </MudContainer>
</DocsPage>
<Footer />

