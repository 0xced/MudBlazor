@page "/"



<MudContainer MaxWidth="MaxWidth.Medium" Class="docs-home">
    <MudBlazorLogo />
    <div class="docs-home-brand">
        <h1>MudBlazor</h1>
        <p>Blazor components for faster and easier web development.</p>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Link="/getting-started/installation">Get Started</MudButton>
    </div>
</MudContainer>
<MudContainer>
    <MudGrid>
        <MudItem xs="12" md="6">
            <MudPaper Elevation="99" Class="docs-home-paper">
                <div class="docs-home-title">
                    <MudIcon Icon="@Icons.Material.GetApp"/>
                    <h2>Installation</h2>
                </div>
                <MudText Typo="Typo.subtitle1">Install MudBlazor via NuGet.</MudText>
                <MarkdownSegment Text="@Markdown_Install" Class="docs-home-markdown"/>
                <MudText Typo="Typo.subtitle1">Link the css file in your _Host.cshtml or index.html</MudText>
                <MarkdownSegment  Text="@Markdown_Link" Class="docs-home-markdown"/>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Link="/getting-started/installation">Read installation docs</MudButton>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Elevation="99" Class="docs-home-paper">
                <div class="docs-home-title">
                    <MudIcon Icon="@Icons.Material.Build" />
                    <h2>Getting started</h2>
                </div>
                <MudText Typo="Typo.subtitle1">Add using tag to _Imports.razor or individual pages.</MudText>
                <MarkdownSegment Text="@Markdown_Using" Class="docs-home-markdown"/>
                <MudText Typo="Typo.subtitle1">Usage</MudText>
                <MarkdownSegment Text="@Markdown_Usage" Class="docs-home-markdown"/>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Link="/getting-started/usage">Explore the docs</MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
<MudContainer>
    <MudText Typo="Typo.h4" Align="Align.Center">Examples</MudText>
    <MudText Align="Align.Center">Use them as template for your project or just peak around see how we did stuff.</MudText>
    <div style="padding-top:64px; padding-bottom:64px;">
        <MudText Align="Align.Center">Comming soon...</MudText>
    </div>
</MudContainer>
<Footer />

@code {
string Markdown_Install = @"```html
dotnet add package MudBlazor
```";
string Markdown_Link = @"```html
<link href=""_content/MudBlazor/MudBlazor.min.css"" rel=""stylesheet""/>
```";
string Markdown_Using = @"```html
@using MudBlazor
```";
string Markdown_Usage = @"```html
<MudButton Color=""Color.Primary"">My Button</MudButton>
```";
}