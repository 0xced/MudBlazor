<MudTable Items="@Elements">
    <HeaderContent>
        <MudTh>Item</MudTh>
        <MudTh>Tooltip</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Item">@context</MudTd>
        <MudTd DataLabel="Tooltip">
            This text does not have a tooltip
        </MudTd>
    </RowTemplate>
</MudTable>

<MudTable Items="@Elements" Class="mt-3">
    <HeaderContent>
        <MudTh>Item</MudTh>
        <MudTh>Tooltip</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Item">@context</MudTd>
        <MudTd DataLabel="Tooltip">
            <MudTooltip Text="Tooltip content">
                This text has a tooltip
            </MudTooltip>
        </MudTd>
    </RowTemplate>
</MudTable>

<MudTable Items="@Elements" Class="mt-3" Dense="true">
    <HeaderContent>
        <MudTh>Item</MudTh>
        <MudTh>Tooltip</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Item">@context</MudTd>
        <MudTd DataLabel="Tooltip">
            <MudTooltip Text="Tooltip content">
                This text has a tooltip
            </MudTooltip>
        </MudTd>
    </RowTemplate>
</MudTable>

@code {

    private List<string> Elements = new();

    protected override void OnInitialized()
    {
        Elements.Add("First element");
        Elements.Add("Second element");
        Elements.Add("Third element");
    }
}