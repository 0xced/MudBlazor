@using System.Net.Http.Json
@using MudBlazor.Examples.Data.Models
@inject HttpClient httpClient

<MudTable Items="@Elements.Take(2)" Hover="true">
    <HeaderContent>
        <MudTh>Color Picker</MudTh>
        <MudTh>Date Picker</MudTh>
        <MudTh>Time Picker</MudTh>

    </HeaderContent>
    <RowTemplate>
        <MudTd><MudColorPicker Label="Basic Color Picker" @bind-Text="_colorValue" Style="@($"color: {_colorValue};")" Placeholder="Select Color" /></MudTd>
        <MudTd><MudDatePicker Label="Basic example" @bind-Date="date" /></MudTd>
        <MudTd><MudTimePicker Label="12 hours" AmPm="true" @bind-Time="time" /></MudTd>
    </RowTemplate>
</MudTable>


@code {
    private string _colorValue;
    DateTime? date = DateTime.Today;
    TimeSpan? time = new TimeSpan(00, 45, 00);
    private IEnumerable<Element> Elements = new List<Element>();

    protected override async Task OnInitializedAsync()
    {
        Elements = await httpClient.GetFromJsonAsync<List<Element>>("webapi/periodictable");
    }
}