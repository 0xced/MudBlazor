<MudSimpleTable Style="overflow-x: auto;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>IP Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in rows)
        {
            <tr>
                <td>@(row.Split()[0])</td>
                <td oncontextmenu="return false;" @onmouseup="((e) => nameContextMenu.OpenMenu(e))">Click me</td>
                <td>@(row.Split()[2])</td>
                <td oncontextmenu="return false;" @onmouseup="((e) => genderContextMenu.OpenMenu(e))">Click me</td>
                <td>@(row.Split()[4])</td>
            </tr>
        }
    </tbody>
</MudSimpleTable>

<MudMenu @ref="genderContextMenu" PositionAtCurser="true">
    <MudListItem Text="Gender option #1" />
    <MudListItem Text="Gender option #2" />
</MudMenu>

<MudMenu @ref="nameContextMenu" PositionAtCurser="true">
