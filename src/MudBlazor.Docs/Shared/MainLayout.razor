@inherits LayoutComponentBase

<ThemeProvider/>
    <MarkdownScripts />
    <Layout DrawerOpen="@_drawerOpen">
        <AppBar Elevation="99">
            <IconButton Icon="@Icons.Material_Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <AppBarSpacer />
            <IconButton Icon="@Icons.Material_Invert_colors" Color="Color.Inherit" />
            <IconButton Icon="@Icons.Material_Brightness_4" Color="Color.Inherit" />
            <IconButton Icon="@Icons.Brand_GitHub" Color="Color.Inherit" Link="https://github.com/Garderoben/MudBlazor" />
        </AppBar>
        <Drawer Elevation="99">
            <DrawerHeader>
                <span class="mudblazor-brand">
                    MudBlazor
                </span>
            </DrawerHeader>
            <NavMenu />
        </Drawer>
        <MainContent Class="mudblazor-main-content">
            @Body
        </MainContent>
    </Layout>

    @code {

        bool _drawerOpen = true;

        void DrawerToggle()
        {
            _drawerOpen = !_drawerOpen;
        }
    }

